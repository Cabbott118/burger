<h1 class="center-align">Burgers!</h1>

<div class="container">
    <div class="row">
        <div class="col s12">
            <form class="createBurger">
                <div class="formGroup">
                    <label for="burgName" id="Burger-Name"><h4>Order Burger</h4></label>
                    <input type="text" id="burgName" name="name">
                </div>
            </form>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col s6">
            <h2>Burgers ready to take:</h2>
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devour=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
        </div>

        <div class="col s6">
            <h2>Order a Burger here:</h2>
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            {{>burgers/burger-block devour=false}}
                        {{/if}}
                    {{/each}}
                </ul>
        </div>
    </div>
</div>
